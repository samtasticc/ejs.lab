<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
<!-- This allows nav.ejs to be included in the nav bar on your webpage. -->
  <%- include('./partials/nav') %>
  <h1>Categories</h1>
  <ul>
    <% RESTAURANT.menu.forEach((item, index) => { %>
    <a href="/<%= index %>">
        <li><%= item.mains %>: <%= item.deserts %>: <%= item.sides %></li>
    <% }); %>
    </a>
   </ul>
</body>
</html>